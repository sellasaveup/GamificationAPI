<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>GamificationAPI</display-name>
  <welcome-file-list>
    <welcome-file>Login.jsp</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>GAMIFICATION WEB API</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>com.gamification.api.controller</param-value>
	</init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>GAMIFICATION WEB API</servlet-name>
    <url-pattern>/sella/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>RewardController</display-name>
    <servlet-name>RewardController</servlet-name>
    <servlet-class>com.gamification.web.controller.RewardController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RewardController</servlet-name>
    <url-pattern>/RewardController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ChallengeController</display-name>
    <servlet-name>ChallengeController</servlet-name>
    <servlet-class>com.gamification.web.controller.ChallengeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ChallengeController</servlet-name>
    <url-pattern>/ChallengeController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CustomerMasterController</display-name>
    <servlet-name>CustomerMasterController</servlet-name>
    <servlet-class>com.gamification.web.controller.CustomerMasterController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CustomerMasterController</servlet-name>
    <url-pattern>/CustomerMasterController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>BadgeMasterController</display-name>
    <servlet-name>BadgeMasterController</servlet-name>
    <servlet-class>com.gamification.web.controller.BadgeMasterController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BadgeMasterController</servlet-name>
    <url-pattern>/BadgeMasterController</url-pattern>
  </servlet-mapping>
</web-app>